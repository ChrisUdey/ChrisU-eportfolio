<div class="row">
    <div class="col-md-8">
        <h1>{{title}}</h1>
        <p class="lead">{{aboutMe}}</p>

        <!-- Navigation buttons -->
        <div class="mt-4">
            <a href="/about" class="btn btn-primary me-2">Learn About Me</a>
            <a href="/projects" class="btn btn-outline-primary me-2">View My Projects</a>
            <a href="/skills" class="btn btn-outline-secondary me-2">My Skills</a>
        </div>
    </div>

    <div class="col-md-4">
        <img src="{{picture}}" alt="Chris Udey Profile Picture" class="img-fluid rounded">
    </div>
</div>

<!-- Quick Links Section -->
<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">GitHub Link</h5>
                <p class="card-text">Take a look at my github!</p>
                <a href="/about" class="btn btn-primary">Github</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">LinkedIn</h5>
                <p class="card-text">Check out my profile on LinkedIn!</p>
                <a href="/projects" class="btn btn-primary">LinkedIn</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Contact Me</h5>
                <p class="card-text">Get in touch with me for opportunities.</p>
                <a href="/contact" class="btn btn-primary">Contact Info</a>
            </div>
        </div>
    </div>
</div>